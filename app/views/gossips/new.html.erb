<h1> Balance ton GOSSIP </h1><br></br>

	<%=form_for @gossip, url:{action:"create"} do |f| %>
		
		<div class="form-group">

			<label> Rentre un pseudo </label> 

			<%= f.text_field :anonymous_author, class:'form_control' %> 
		
		</div>

		<div class="form-group">

			<label> Contenu du Gossip </label> 

			<%= f.text_area :content, class:'form_control' %> 
		
		</div>


		<div class="form-group">

			<button type="submit" class="btn btn-primary"> Enregistrer le Gossip </button>
		
		</div> 

	<% end %>

<a href="<%= gossips_path %>" class="btn btn-primary"> Revenir aux Gossips >