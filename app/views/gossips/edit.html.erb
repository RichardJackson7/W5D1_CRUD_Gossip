<h1> Edit le Gossip </h1>

<%=form_for @gossip, url:{action:"update"} do |f| %>
	
	<div class="form-group">

		<label> Rentre un pseudo </label> 

		<%= f.text_field :anonymous_author, class:'form_control' %> 
		
	</div>

	<div class="form-group">

		<label> Contenu du Gossip </label> 

		<%= f.text_area :content, class:'form_control' %> 
		
	</div>


	<div class="form-group">
         <button type=submit class="btn btn-primary">Modifier le gossip</button>
            
         <a href="<%= gossip_path(@gossip.id) %>" class="btn btn-danger" data-method="DELETE">Supprimer le gossip</a>
    </div>


<% end %>
